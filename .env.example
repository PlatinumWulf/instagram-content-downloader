# =================================================================
# PLIK KONFIGURACYJNY ZMIENNYCH ŚRODOWISKOWYCH
# Instagram Content Downloader
# =================================================================
#
# Skopiuj ten plik jako .env i dostosuj wartości do swoich potrzeb:
#   cp .env.example .env
#
# UWAGA: Plik .env zawiera wrażliwe dane i NIE POWINIEN być commitowany do repozytorium!
#

# =================================================================
# DANE LOGOWANIA INSTAGRAM (Opcjonalne)
# =================================================================
# OSTRZEŻENIE: Przechowywanie hasła w pliku .env NIE JEST ZALECANE!
# Lepiej logować się interaktywnie lub przez przeglądarkę.
# Użyj tylko jeśli wiesz co robisz i plik .env ma uprawnienia 600.

# INSTAGRAM_USERNAME=twoja_nazwa_uzytkownika
# INSTAGRAM_PASSWORD=twoje_haslo

# =================================================================
# KONFIGURACJA POBIERANIA
# =================================================================

# Opcje mediów
DOWNLOAD_VIDEOS=true
DOWNLOAD_THUMBNAILS=true
DOWNLOAD_GEOTAGS=false
DOWNLOAD_COMMENTS=false
SAVE_METADATA=true
COMPRESS_JSON=false

# Które typy zawartości pobierać domyślnie
DOWNLOAD_POSTS=true
DOWNLOAD_STORIES=false
DOWNLOAD_HIGHLIGHTS=false
DOWNLOAD_TAGGED=false
DOWNLOAD_IGTV=false

# =================================================================
# RATE LIMITING (Ochrona przed blokowaniem)
# =================================================================
# WAŻNE: Instagram BARDZO agresywnie blokuje bez logowania!
# Zalecane wartości dla bezpieczeństwa:

# Bazowe opóźnienie między requestami (w sekundach)
# UWAGA: Użyj ≥5s dla dużych profili, Instagram blokuje za szybkie requesty!
SLEEP_TIME=5

# Minimalne i maksymalne opóźnienie (dla adaptive rate limiting)
MIN_SLEEP_TIME=3
MAX_SLEEP_TIME=60

# Mnożnik dla exponential backoff przy błędach
RATE_LIMIT_BACKOFF_MULTIPLIER=1.5

# =================================================================
# POŁĄCZENIE
# =================================================================

# Maksymalna liczba prób połączenia
MAX_ATTEMPTS=3

# Timeout dla requestów (w sekundach)
REQUEST_TIMEOUT=300

# =================================================================
# KATALOGI
# =================================================================

# Katalog gdzie będą zapisywane pobrane pliki
DOWNLOAD_DIR=data/downloads

# Katalog dla plików sesji
SESSION_DIR=data/sessions

# =================================================================
# SZYFROWANIE SESJI
# =================================================================

# Opcjonalny klucz szyfrowania sesji (jeśli nie podano, wygeneruje automatycznie)
# Wygeneruj bezpieczny klucz np. przez: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# SESSION_ENCRYPTION_KEY=

# =================================================================
# LOGOWANIE (Debugging)
# =================================================================

# Poziom logowania: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Plik logu (jeśli pusty, logowanie tylko do konsoli)
LOG_FILE=logs/instagram_downloader.log

# Maksymalny rozmiar pliku logu (w bajtach)
LOG_MAX_SIZE=10485760

# Liczba backupów pliku logu
LOG_BACKUP_COUNT=5

# =================================================================
# ZAAWANSOWANE (Opcjonalne)
# =================================================================

# User Agent (pozostaw puste dla domyślnego)
# USER_AGENT=

# Proxy (jeśli potrzebne)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# =================================================================
# SELENIUM (dla logowania przez przeglądarkę)
# =================================================================

# Ścieżka do WebDriver (jeśli nie w PATH)
# WEBDRIVER_PATH=/path/to/chromedriver

# Tryb headless (true/false) - przeglądarka bez GUI
HEADLESS_MODE=false

# Timeout dla Selenium (sekundy)
SELENIUM_TIMEOUT=30
